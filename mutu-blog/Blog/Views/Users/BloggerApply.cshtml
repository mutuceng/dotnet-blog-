@model BloggerApplyViewModel
<head>
    <link rel="stylesheet" href="~/css/blogs/blog-create.css">
</head>
<div class="blog-create container">
    <form class="apply-form">
        <div class="form-group col-10 mb-2">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        
        <div class="form-group col-10 mb-2">
            <label asp-for="LinkedInProfile" class="control-label"></label>
            <textarea asp-for="LinkedInProfile" class="form-control"></textarea>
            <span asp-validation-for="LinkedInProfile" class="text-danger"></span>
        </div>
        
        <div class="form-group col-5 mb-2">
            <label asp-for="ProfilePhoto" class="control-label"></label>
            <input asp-for="ProfilePhoto" class="form-control" type="file" />
            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
        </div>

        <button type="submit" class="publish-btn btn-primary">Ba≈üvur</button>
    </form>
</div>