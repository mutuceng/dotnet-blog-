@model IEnumerable<Blog.Entity.Tag>

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title mb-0">Tags</h5>
        </div>
        <div class="card-body">
            <ul class="list-inline d-flex flex-wrap gap-2">
                @foreach(var tag in Model)
                {
                    <li class="list-inline-item">
                        <a asp-controller="Blogs" asp-action="Index" asp-route-tagId="@tag.TagId" class="btn btn-outline-secondary btn-sm">@tag.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>    